<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedButton_Tablet.Set1_1">
    <StackLayout Padding="10,10,0,0">
        <Label Text="1.General condition"  FontAttributes="Bold" FontSize="Large"/>
        <Editor BackgroundColor="Beige" VerticalOptions="FillAndExpand" TextChanged="Editor_TextChanged"/>
        <StackLayout Orientation="Horizontal" Spacing="40">
            <Button Text="Cancel" Clicked="Cancel_Clicked" WidthRequest="120" BorderRadius="20" BackgroundColor="DarkOliveGreen"/>
            <Button Text="Next" Clicked="Next_Clicked" WidthRequest="120" BorderRadius="20" BackgroundColor="DarkOliveGreen"/>

        </StackLayout>


    </StackLayout>
</ContentPage>
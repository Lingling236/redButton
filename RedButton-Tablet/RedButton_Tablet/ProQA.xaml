<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedButton_Tablet.ProQA">

    <StackLayout HorizontalOptions="Center"  Padding="0,30,0,0">
            <Label Text="1.Code" />
            <Entry />
            <Label Text="2.Age" />
            <Entry Keyboard="Numeric"/>
            <Label Text="3.Gender" />
            <Picker>
                <Picker.Items>
                    <x:String>Male</x:String>
                    <x:String>Female</x:String>
                </Picker.Items>
            </Picker>
            <StackLayout Orientation="Horizontal" Spacing="40">
                <Button Text="Cancel" Clicked="Cancel_Clicked"/>
                <Button Text="Send" Clicked="Send_Clicked"/>
            </StackLayout>
        </StackLayout>
   
</ContentPage>
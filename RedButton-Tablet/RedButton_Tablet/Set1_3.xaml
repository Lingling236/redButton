<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedButton_Tablet.Set1_3">
    <StackLayout Padding="10,10,0,0">
        <Label Text="3.Heartrate" FontAttributes="Bold" FontSize="Large"/>
        <StackLayout Orientation="Horizontal" Padding="0,20,0,0">
            <Entry Keyboard="Numeric" WidthRequest="200" TextChanged="Entry_TextChanged"/>
            <Label Text="bpm" HorizontalOptions="End"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal" Spacing="40">
            <Button Text="Previous" Clicked="Previous_Clicked" WidthRequest="120" BorderRadius="20" BackgroundColor="DarkOliveGreen"/>
            <Button Text="Next" Clicked="Next_Clicked" WidthRequest="120" BorderRadius="20" BackgroundColor="DarkOliveGreen"/>

        </StackLayout>

    </StackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RedButton_Tablet.Set1_1">
    <StackLayout Padding="10,10,10,10" Spacing="30">
        <Label Text="1.General condition"  FontAttributes="Bold" FontSize="Large"/>
        <Editor BackgroundColor="Beige" VerticalOptions="FillAndExpand" TextChanged="Editor_TextChanged"/>
        <StackLayout Orientation="Horizontal" Spacing="40">
            <Button Text="Cancel" Clicked="Cancel_Clicked" 
                    BackgroundColor="{StaticResource buttonBackgroundColor}"
                    BorderRadius="{StaticResource borderRadius}"
                    WidthRequest="{StaticResource widthRequest}"/>
            <Button Text="Next" Clicked="Next_Clicked" 
                    BackgroundColor="{StaticResource buttonBackgroundColor}"
                    BorderRadius="{StaticResource borderRadius}"
                    WidthRequest="{StaticResource widthRequest}"/>

        </StackLayout>


    </StackLayout>
</ContentPage>